        <TextBox x:Name="PhoneTextBox" HorizontalAlignment="Left" Height="32" Margin="18,151,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="303" TextChanged="PhoneTextBox_TextChanged"/>
        <Label x:Name="PhoneCodeLabel" Content="Введите код, отправленный на номер [телефон]:" HorizontalAlignment="Left" Margin="10,120,0,0" VerticalAlignment="Top"/>
        <Label x:Name="PhoneComments" Content="-&gt;" HorizontalAlignment="Left" Margin="18,188,0,0" VerticalAlignment="Top"/>
        <Label x:Name="EmailComments" Content="-&gt;" HorizontalAlignment="Left" Margin="18,80,0,0" VerticalAlignment="Top"/>
        <Button x:Name="FinalConfirmButton" Content="Добавление пользователя" HorizontalAlignment="Left" Margin="141,231,0,0" VerticalAlignment="Top" Width="180" Height="33" Click="FinalConfirmButton_Click"/>

    </Grid>
</Window>
