        <TextBox x:Name="EmalTextBox" HorizontalAlignment="Left" Height="32" Margin="18,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="303" TextChanged="EmalTextBox_TextChanged"/>
