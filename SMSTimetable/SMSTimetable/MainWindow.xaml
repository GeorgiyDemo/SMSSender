        <TextBox x:Name="LoginTextBox" HorizontalAlignment="Left" Height="30" Margin="91,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <GroupBox x:Name="LoginGroupBox" Header="Авторизация пользователя" HorizontalAlignment="Left" Height="184" Margin="21,9,0,0" VerticalAlignment="Top" Width="239" BorderBrush="#FF2B77BB">
            <CheckBox x:Name="SaveLoginCheckBox" Content="Запомнить" HorizontalAlignment="Left" Margin="66,96,0,0" VerticalAlignment="Top"/>
        </GroupBox>
        <Label x:Name="PasswordLabel" Content="Пароль:" HorizontalAlignment="Left" Margin="32,88,0,0" VerticalAlignment="Top" Height="25" Width="54"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Height="30" Margin="91,88,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
